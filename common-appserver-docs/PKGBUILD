targets=(
  "centos"
  "ubuntu"
)
pkgname="carbonio-common-appserver-docs"
pkgver="3.0.4"
pkgrel="1"
pkgdesc="Carbonio Core Mailbox Docs"
pkgdesclong=(
  "Carbonio Core Mailbox Docs"
)
arch="amd64"
maintainer="Zextras <packages@zextras.com>"
url="https://zextras.com"
depends=(
  "carbonio-core"
)
section="mail"
priority="optional"

package() {
  cd "${srcdir}"/../../
  install -Ddm755 "${pkgdir}/opt/zextras/docs"
  rsync -a \
    --exclude='*PL.txt' \
    --exclude='zmztozmig.txt' \
    opt/zextras/docs/ \
    "${pkgdir}/opt/zextras/docs"
}
