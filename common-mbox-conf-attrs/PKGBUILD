targets=(
  "centos"
  "ubuntu"
)
pkgname="carbonio-common-mbox-conf-attrs"
pkgver="1.0.0"
pkgrel="1"
pkgdesc="Carbonio Core Mailbox Attributes Configuration"
pkgdesclong=(
  "Carbonio Core Mailbox Attributes Configuration"
)
arch="amd64"
maintainer="Zextras <packages@zextras.com>"
url="https://zextras.com"
sources=(
  "attrs-schema"
)
hashsums=(
  "SKIP"
)
depends=(
  "carbonio-core-components"
)
section="mail"
priority="optional"

package() {
  cd "${srcdir}"/../../
  install -D opt/zextras/conf/attrs/amavisd-new-attrs.xml \
    "${pkgdir}/opt/zextras/conf/attrs/amavisd-new-attrs.xml"
  install -D opt/zextras/conf/attrs/attrs.xml \
    "${pkgdir}/opt/zextras/conf/attrs/attrs.xml"
  install -D opt/zextras/conf/attrs/ocs.xml \
    "${pkgdir}/opt/zextras/conf/attrs/ocs.xml"
  install -D "${srcdir}"/attrs-schema \
    "${pkgdir}/opt/zextras/conf/attrs-schema"
}
