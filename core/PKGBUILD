source=(
  "carbonio-amavis::git+${url}/carbonio-amavis#tag=4.0.7"
  "carbonio-core-utils::git+${url}/carbonio-core-utils#branch=devel"
  "carbonio-freshclam::git+${url}/carbonio-freshclam#tag=4.0.3"
