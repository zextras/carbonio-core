    "${pkgdir}/opt/zextras/libexec/configrewrite"
  install -Dm755 src/libexec/icalmig.pl \
    "${pkgdir}/opt/zextras/libexec/icalmig"
  install -D src/contrib/fetchercfg.pl \
    "${pkgdir}/opt/zextras/contrib/zmfetchercfg"
