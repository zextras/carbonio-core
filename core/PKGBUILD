)
license=(
  "GPL-2.0-only"
)
url="https://github.com/zextras"
section="mail"
priority="optional"
arch=('x86_64')
depends__apt=(
  "adduser"
  "carbonio-common-appserver-conf"
  "carbonio-common-appserver-native-lib"
  "carbonio-mailbox-jar"
