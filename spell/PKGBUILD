targets=(
  "centos"
  "ubuntu"
)
pkgname="carbonio-spell"
pkgver="1.0.0"
pkgrel="1"
pkgdesc="An open-source, community-driven email server"
pkgdesclong=(
  "An open-source, community-driven email server"
)
maintainer="Zextras <packages@zextras.com>"
url="https://zextras.com"
section="mail"
priority="optional"
arch="amd64"
depends=(
  "carbonio-apache"
  "carbonio-core"
  "carbonio-spell-components"
)

package() {
  cd "${srcdir}"/../../
  install -D opt/zextras/data/httpd/htdocs/aspell.php \
    "${pkgdir}/opt/zextras/data/httpd/htdocs/aspell.php"

}

postinst() {
  chown root:root /opt/zextras/data/httpd/htdocs/aspell.php
}
