targets=(
  "centos"
  "ubuntu"
)
pkgname="carbonio-common-mbox-conf-rights"
pkgver="21.00"
pkgrel="1"
pkgdesc="Carbonio Core Mailbox Rights Configuration"
pkgdesclong=(
  "Carbonio Core Mailbox Rights Configuration"
)
arch="amd64"
maintainer="Zextras <packages@zextras.com>"
url="https://zextras.com"
depends=(
  "carbonio-core-components"
)
section="mail"
priority="optional"

package() {
  cd "${srcdir}"/../../
  install -Ddm755 "${pkgdir}/opt/zextras/conf/rights"
  rsync -a opt/zextras/conf/rights/ \
    "${pkgdir}/opt/zextras/conf/rights"
}
