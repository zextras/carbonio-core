targets=(
  "centos"
  "ubuntu"
)
pkgname="carbonio-common-mbox-native-lib"
pkgver="1.0.0"
pkgrel="1"
pkgdesc="Carbonio Core Mailbox Native Libs"
pkgdesclong=(
  "Carbonio Core Mailbox Native Libs"
)
arch="amd64"
maintainer="Zextras <packages@zextras.com>"
url="https://zextras.com"
depends=(
  "carbonio-core-components"
)
depends:apt=(
  "libc6"
)
depends:yum=(
  "glibc"
)
section="mail"
priority="optional"

package() {
  cd "${srcdir}"/../../
  install -D opt/zextras/lib/libnative.so \
    "${pkgdir}/opt/zextras/lib/libnative.so"
}
