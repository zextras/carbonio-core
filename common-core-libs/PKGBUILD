targets=(
  "centos"
  "ubuntu"
)
pkgname="carbonio-common-core-libs"
pkgver="4.0.0"
pkgrel="1"
pkgdesc="Replace Carbonio core libs"
pkgdesclong=(
  "Replace Carbonio core libs"
)
arch="amd64"
maintainer="Zextras <packages@zextras.com>"
url="https://zextras.com"
depends=(
  "carbonio-core"
)
section="mail"
priority="optional"

package() {
  cd "${srcdir}"/../../
  install -Ddm755 "${pkgdir}/opt/zextras/lib/jars"
  rsync -a \
    --exclude='native.jar' \
    --exclude='zimbraclient.jar' \
    --exclude='zimbracommon.jar' \
    --exclude='zimbrasoap.jar' \
    --exclude='zimbrastore.jar' \
    opt/zextras/lib/jars/ \
    "${pkgdir}/opt/zextras/lib/jars"
}
